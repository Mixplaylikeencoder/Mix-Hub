return function(text)
    local plr = game.Players.LocalPlayer
    local gui = plr:WaitForChild("PlayerGui")
    local notifGui = gui:FindFirstChild("NotifUI") 

    if not notifGui then
        notifGui = Instance.new("ScreenGui")
        notifGui.Name = "NotifUI"
        notifGui.Parent = gui
    end

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.2, 0, 0.05, 0)
    frame.Position = UDim2.new(0.02, 0, 1, 0)
    frame.AnchorPoint = Vector2.new(0, 1)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    frame.BorderSizePixel = 0
    frame.BackgroundTransparency = 0.2
    frame.Parent = notifGui

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = frame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 1, -10)
    label.Position = UDim2.new(0, 5, 0, 5)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextScaled = true
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    frame:TweenPosition(UDim2.new(0.02, 0, 0.95, 0), "Out", "Quad", 0.5, true)

    task.wait(3)

    frame:TweenPosition(UDim2.new(0.02, 0, 1, 0), "In", "Quad", 0.5, true)

    task.delay(0.5, function()
        frame:Destroy()
    end)
end
